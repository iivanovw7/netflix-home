{
    "compilerOptions": {
        "outDir": "./build/",
        "lib": [
            "es6",
            "es2015.promise",
            "es2016.array.include",
            "DOM",
            "DOM.Iterable",
            "es2017",
            "es2018.intl",
            "esnext"
        ],
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": false,
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowUmdGlobalAccess": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noStrictGenericChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "useDefineForClassFields": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
        "types": [
            "node",
            "jest",
            "vite/client",
            "vite-plugin-svg-icons/client",
            "./src/shared/types/env",
            "./src/shared/types/globals",
        ],
    },
    "rules": {
        "quotemark": [
            true,
            "single"
        ]
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
