/**
 * Module contains Img classes.
 * @module shared/components/Img/index.pcss
 */

.image {
    display: inline-block;

    &__img {
        position: relative;
        width: 100%;
        overflow: hidden;

        &::before {
            display: block;
            width: 100%;
            padding-top: calc(100% / (var(--aspect-ratio, 4 / 3)));
            content: '';
        }
    }
}
