/**
 * Module contains Dropdown menu items classes.
 * @module shared/components/DropdownMenu/MenuItems/index.pcss
 */

@import '../../../../shared/styles/mixins.pcss';

.nh-components-dropdown-menu-items {
    display: flex;
    flex-direction: column;
    width: 200px;
    max-height: 100vh;
    margin: 0;
    padding: 5px 0;
    overflow: hidden auto;
    background-color: var(--background-content-color);
    transform-origin: center top;
}
