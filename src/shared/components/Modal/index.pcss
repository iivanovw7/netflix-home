/**
 * Module contains Modal classes.
 * @module shared/components/Modal/index.pcss
 */

.nh-components-modal {
    display: contents;

    &__close {
        position: absolute;
        top: 16px;
        right: 16px;
        padding: 2px;

        @mixin media sm-down {
            top: 8px;
            right: 8px;
        }
    }
}
